        <Setter Property="CornerRadius" Value="40,0,0,40"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
    </Style>

    <Style x:Key="FilterItemRootBorder" TargetType="Border">
